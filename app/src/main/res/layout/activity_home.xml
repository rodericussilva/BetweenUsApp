<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ CONTEÃšDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_welcome">

        <!-- ðŸ” TOPO COM BANNER -->
        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="210dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ðŸ–¼ï¸ BANNER -->
            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_placeholder"/>

            <!-- ðŸ” BOTÃƒO MENU -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_margin="13dp"
                android:src="@drawable/ic_menu" />

            <!-- ðŸ‘¤ FOTO USUÃRIO -->
            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="28dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/circle_placeholder"
                android:elevation="12dp"
                android:scaleType="centerCrop" />

            <!-- ðŸ‘¤ FOTO PARCEIRO -->
            <ImageView
                android:id="@+id/imgPartner"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/circle_placeholder"
                android:elevation="12dp"
                android:scaleType="centerCrop" />

            <!-- â¤ï¸ CORAÃ‡ÃƒO ENTRE OS DOIS -->
            <ImageView
                android:id="@+id/imgHeart"
                android:layout_width="237dp"
                android:layout_height="60dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="45dp"
                android:elevation="8dp"
                android:src="@drawable/hearts_dotted" />

        </FrameLayout>

        <!-- ðŸ§­ MENU PRINCIPAL -->
        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_menu"
            android:elevation="10dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- CALENDÃRIO -->
            <LinearLayout
                android:id="@+id/menuCalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_calendar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CalendÃ¡rio"
                    android:textColor="#4A6FA5"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- CHAT -->
            <LinearLayout
                android:id="@+id/menuChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_chat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textColor="#4A6FA5"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- MURAL -->
            <LinearLayout
                android:id="@+id/menuMural"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_mural"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mural"
                    android:textColor="#4A6FA5"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- â¤ï¸ CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLoveLanguage"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#FFFFFF"

            app:layout_constraintTop_toBottomOf="@id/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_heart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linguagens do Amor"
                    android:textSize="19sp"
                    android:textColor="#222"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ðŸ§­ MENU LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg_menu"
        android:elevation="16dp"

        app:itemIconTint="@null"
        app:itemTextColor="#4A6FA5"
        app:itemIconSize="32dp"

        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
